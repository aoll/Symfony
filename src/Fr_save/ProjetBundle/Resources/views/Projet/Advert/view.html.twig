{# src/BI/BiodanzaBundle/Resources/view/Advert/view.html.twig #}



{% extends "BIBiodanzaBundle::layout.html.twig" %}

{% block title %}
  Lecture d'une annonce - {{ parent() }}
{% endblock %}

{% block bibiodanza_body %}
{# On vérifie qu'une image soit bien associée à l'annonce #}

{% if advert.image is not null %}
  <img 
  src="{{ asset(advert.image.webPath) }}"
  alt="{{ advert.image.alt }}">
{% endif %}

<h2>{{ advert.title }}</h2>
  <i>Par {{ advert.author }}, le {{ advert.date|date('d/m/Y') }}</i>

  <div class="well">
    {{ advert.content }}
  </div>

  <p>
    <a href="{{ path('bi_biodanza_home') }}" class="btn btn-default">
      <i class="glyphicon glyphicon-chevron-left"></i>
      Retour à la liste
    </a>
    <a href="{{ path('bi_biodanza_edit', {'id': advert.id}) }}" class="btn btn-default">
      <i class="glyphicon glyphicon-edit"></i>
      Modifier l'annonce
    </a>
    <a href="{{ path('bi_biodanza_delete', {'id': advert.id}) }}" class="btn btn-danger">
      <i class="glyphicon glyphicon-trash"></i>
      Supprimer l'annonce
    </a>
  </p>

{% endblock %}